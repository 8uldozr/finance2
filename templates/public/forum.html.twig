{% extends "base.html.twig" %}

{% block title %}Les analyses!{% endblock %}

{% block body %}

    <div class="container col-3">

        <h2>Bienvenue sur le forum</h2>

    </div>
        {% if app.user %}
            <a href="{{ path('create') }}"><button type="submit" class="btn btn-warning">Poster une nouvelle analyse</button></a>
        {% endif %}

    <div class="row">
        {% for post in posts %}
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card">
                    <div class="card-img-top">
                        <img src="{{ post.imageUrl }}" class="img-fluid">
                    </div>
                    <div class="card-header">
                        <h3>{{ post.title | upper }}</h3>
                    </div>
                    <div class="card-content">
                        {{ post.content }}
                    </div>
                    <div class="card-footer">
                        {{ post.createdAt | date('d-m-Y') }}
                    </div>
                {% if app.user and post.user is same as app.user %}
                    <a href="{{ path('edit', {'id' : post.id }) }}"><button class="btn btn-primary mt-3" type="submit"> Modifiez vos analyses </button></a>
                {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}